<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Exclude /api and /uploads from rewriting
  RewriteCond %{REQUEST_URI} ^/(api|uploads) [NC]
  RewriteRule ^ - [L]

  # Redirect root (empty URI) to /home
  RewriteRule ^$ /home [R=301,L]

  # For all other requests not corresponding to an existing file or directory,
  # serve index.html to allow React Router to handle the routing.
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
